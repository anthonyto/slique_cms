<div class="sub-container">
  <h2 class="inline">Tasks</h2><%= link_to 'Add', new_account_task_path(@account), class: 'btn green-meadow btn-xs inline-btn' %>

  <div class="table-scrollable">
    <table class="table table-hover table-light">
      <thead>
        <tr>
          <th>Name</th>
          <th>Requested</th>
          <th>Completed</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @account.tasks.each do |task| %>
          <tr>
            <td><%= task.name %></td>
            <td><%= task.requested %></td>
            <td><%= task.completed.humanize %></td>
            <td><%= link_to 'Edit', edit_account_task_path(@account, task), class: 'btn green btn-xs' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

