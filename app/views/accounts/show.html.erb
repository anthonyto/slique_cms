<p id="notice"><%= notice %></p>

<h2 class="inline"><%= @account.name %></h2><%= link_to 'Edit', edit_account_path(@account), class: 'btn green-meadow btn-xs inline-btn' %>

<div class="sub-container">
  <strong>Client:</strong> <%= @account.client %><br>

  <strong>Services:</strong> <%= @account.services %><br>

  <strong>Instagram:</strong> <%= @account.instagram %><br>

  <strong>Facebook:</strong> <%= @account.facebook %><br>

  <strong>Yelp:</strong> <%= @account.yelp %><br>

  <strong>Slique_email:</strong> <%= @account.slique_email %><br>

  <strong>Pr_partner:</strong> <%= @account.pr_partner %><br>

  <strong>Ubest:</strong> <%= @account.ubest %><br>

  <strong>Five Star Boss:</strong> <%= @account.fivestarboss %><br>

  <strong>Facebook_ad:</strong> <%= @account.facebook_ad %><br>

  <strong>Facebook Ad Notes:</strong> <%= @account.facebook_ad_notes %><br>

  <strong>Correspondence:</strong> <%= @account.correspondence %><br>

  <strong>Messaging Timeline Q1:</strong> <%= @account.messaging_timeline_q1 %><br>

  <strong>Messaging Timeline Q2:</strong> <%= @account.messaging_timeline_q2 %><br>

  <strong>Messaging Timeline Q3:</strong> <%= @account.messaging_timeline_q3 %><br>

  <strong>Messaging Timeline Q4:</strong> <%= @account.messaging_timeline_q4 %><br>

  <strong>Priorities:</strong> <%= @account.priorities %><br>

  <strong>Promotions:</strong> <%= @account.promotions %><br>

  <strong>Notes:</strong> <%= @account.notes %><br>
</div>

<div class="sub-container">
  <h2 class="inline">Tasks</h2><%= link_to 'New', new_account_task_path(@account), class: 'btn green-meadow btn-xs inline-btn' %>

  <div class="table-scrollable">
    <table class="table table-hover table-light">
      <thead>
        <tr>
          <th>Name</th>
          <th>Requested</th>
          <th>Completed</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @account.tasks.each do |task| %>
          <tr>
            <td><%= task.name %></td>
            <td><%= task.requested %></td>
            <td><%= task.completed.humanize %></td>
            <td><%= link_to 'Edit', edit_account_task_path(@account, task), class: 'btn blue-sharp btn-xs' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="sub-container">
  <h2 class="inline">Creative Developments</h2><%= link_to 'New', new_account_creative_development_path(@account), class: 'btn green-meadow btn-xs inline-btn' %>

  <div class="table-scrollable">
    <table class="table table-hover table-light">
      <thead>
        <tr>
          <th>Design Name</th>
          <th>Requested</th>
          <th>Completed</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @account.creative_developments.each do |cd| %>
          <tr>
            <td><%= cd.design_name %></td>
            <td><%= cd.requested %></td>
            <td><%= cd.completed.humanize %></td>
            <td><%= link_to 'Edit', edit_account_creative_development_path(@account, cd), class: 'btn blue-sharp btn-xs' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
