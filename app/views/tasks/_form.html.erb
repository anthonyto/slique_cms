<%= form_for([@account, @task]) do |f| %>
  <div class="form-body">
    <% if @task.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

        <ul>
        <% @task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, "Name" %>
      <div class="input-group">
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :requested, "Requested" %>
      <div class="input-group">
        <%= f.text_field :requested, class: 'form-control form-control-inline input-medium date-picker', size: 16, placeholder: 'Select date' %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit (f.object.new_record? ? "Add Task" : "Update Task"), class: 'btn green-meadow' %>
      <% unless f.object.new_record? %>
        <%= link_to 'Delete', account_task_path(@account, @task), method: 'delete', class: 'btn red-sunglo' %>
      <% end %>
      <%= link_to 'Cancel', :back, class: 'btn grey-silver' %>
    </div>
  </div>
<% end %>
