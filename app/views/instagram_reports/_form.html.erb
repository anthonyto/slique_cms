<%= form_for(@ir) do |f| %>
  <div class="form-body">
    <% if @ir.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@ir.errors.count, "error") %> prohibited this task from being saved:</h2>

        <ul>
        <% @ir.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :note, "Note" %>
      <div class="input-group">
        <%= f.text_field :note, class: 'form-control input-xlarge' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :image, "Image" %>
      <div class="input-group">
        <%= f.file_field :image %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit 'Create Instagram Report', class: 'btn green-meadow' %>
      <%= link_to 'Cancel', :back, class: 'btn grey-silver' %>
    </div>
  </div>
<% end %>
